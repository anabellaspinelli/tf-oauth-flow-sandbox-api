  "dependencies": {
    "body-parser": "^1.18.3",
    "express": "^4.16.3",
    "express-session": "^1.15.6",
    "passport": "^0.4.0",
    "passport-typeform": "^0.0.8"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "chai-http": "^4.2.0",
    "husky": "^1.0.0-rc.15",
    "lint-staged": "^7.3.0",
    "mocha": "^5.2.0",
    "nock": "^10.0.0",
    "nodemon": "^1.18.4",
    "standard": "^12.0.1",
    "validate-commit-message": "^3.0.1",
    "yarn": "^1.9.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && yarn test",
      "commit-msg": "validate-commit-msg"
    }
  },
  "lint-staged": {
    "*.js": [
      "standard --fix",
      "git add"
    ]
  },
  "standard": {
    "globals": [
      "describe",
      "it",
      "expect",
      "before",
      "beforeEach",
      "after",
      "afterEach"
    ]
  },
  "config": {
    "validate-commit-message": {
      "types": [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "perf",
        "test",
        "build",
        "ci",
        "chore",
        "revert"
      ],
      "scope": {
        "required": false,
        "allowed": [
          "*"
        ]
      },
      "maxSubjectLength": 100
    }
  }
}
